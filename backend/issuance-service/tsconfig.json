{
  "compilerOptions": {
    "target": "ES2020",               // modern JS target
    "module": "ESNext",               // use ES Modules
    "moduleResolution": "Node",       // Node style module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true
  },
  "include": ["src"]
}
