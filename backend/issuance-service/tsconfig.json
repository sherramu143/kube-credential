{
  "compilerOptions": {
    "target": "ES2020",               // modern JS target
    "module": "NodeNext",               // use ES Modules
    "moduleResolution": "NodeNext",       // Node style module resolution
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node"]
  },
  "include": ["src"]
}
